<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">

        <Layout className="'o_dashboard'" display="{controlPanel: {}}">
            <t t-set-slot="layout-buttons">
                <button class="btn btn-primary" t-on-click="openCustomers">Customers</button>
                <button class="btn btn-primary" t-on-click="openLeads">Leads</button>
            </t>
            <t t-set-slot="control-panel-additional-actions">
                <i class="fa fa-cog" style="align-self: center" t-on-click="showConfig" data-hotkey="u" data-tooltip="Config"/>
            </t>
            <t t-foreach="items.data" t-key="item.id" t-as="item">
                <DashboardItem size="item.size">
                    <t t-set="itemProp" t-value="item.props ? item.props(dashboard.data) : {'data': dashboard.data}"/>
                    <t t-component='item.Component' t-props="itemProp"/>
                </DashboardItem>
            </t>
