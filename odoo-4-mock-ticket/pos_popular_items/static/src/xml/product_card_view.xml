<templates xml:space="preserve">

    

    <t t-inherit="point_of_sale.ProductCard" t-inherit-mode="extension">
        <xpath expr="//div/span[contains(@class, 'price-tag')]" position="before">
            <div t-if="props.internalReference"><span t-out="props.internalReference"></span></div>
        </xpath>
        <xpath expr="//div/span[contains(@class, 'price-tag')]" position="replace">
            <div class="d-flex flex-wrap justify-content-between">
                <span t-if="props.price" class="price-tag text-primary py-1 fw-bolder"
                    t-esc="props.price" />
                <div class="py-1">
                    Sold: <span t-out="props.quantitySold" />
                </div>
            </div>
        </xpath>
    </t>


</templates>