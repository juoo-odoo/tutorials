<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <template id="custom_document_tax_totals">
            <t t-foreach="tax_totals.get('subtotals')" t-as="subtotal">
                <tr class="border-black o_subtotal">
                    <td><strong>Subtotal</strong></td>

                    <td class="text-end">
                        <span
                            t-att-class="oe_subtotal_footer_separator"
                            t-out="subtotal['formatted_amount']"
                        >27.00</span>
                    </td>
                </tr>

                <!-- <t t-set="total_discounts" t-value="sum((l.discount / 100 * l.price_total) for l in o.invoice_line_ids)" />
                <tr t-if="total_discounts > 0" style="border-top: 1px solid lightgray">
                    <td>
                        <span>Discounted Amount</span>
                    </td>
                    <td class="text-end o_price_total">
                        <span class="text-nowrap" t-out="total_discounts">4.05</span>
                    </td>
                </tr> -->

                <t t-set="subtotal_to_show" t-value="subtotal['name']"/>
                <t t-foreach="tax_totals['groups_by_subtotal'][subtotal_to_show]" t-as="amount_by_group">
                    <t t-set="display_tax_base" t-value="tax_totals['display_tax_base']"/>
                    <tr style="border-top: 1px solid lightgray">
                        <td>
                            <span t-out="amount_by_group['tax_group_name']">Tax 15%</span>
                        </td>
                        <td class="text-end o_price_total">
                            <span class="text-nowrap" t-out="amount_by_group['formatted_tax_group_amount']">4.05</span>
                        </td>
                    </tr>
                </t>
            </t>

            <tr t-if="'formatted_rounding_amount' in tax_totals and tax_totals.get('rounding_amount') != 0">
                <td>Rounding</td>
                <td class="text-end">
                    <span t-out="tax_totals.get('formatted_rounding_amount')">0</span>
                </td>
            </tr>
            
            <!--Total amount with all taxes-->
            <tr class="border-black o_total">
                <td><strong>Total</strong></td>
                <td  class="text-end">
                    <span t-out="tax_totals.get('formatted_amount_total')">31.05</span>
                </td>
            </tr>
        </template>

    
        <template id="custom_external_layout">
            <t t-if="not o" t-set="o" t-value="doc"/>

            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>

            <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
                <div class="row">
                    <div class="col-12 mb4">
                        <img src="/mtm_report_customization/static/img/report_header.jpg" style="width: 100%" alt="Logo"/>
                    </div>
                </div>
                <div t-if="company.logo or company.report_header" class="row">
                    <div class="col-12">
                        <div style="border-bottom: 1px solid black;"/>
                        <div t-if="true or report_type == 'pdf'" class="mt-3 d-flex justify-content-end">
                            <span style="font-size: 0.9rem" class="justify-self-end">Page: <span class="page"/> / <span class="topage"/></span>
                        </div>
                    </div>
                </div>

                <div class="row text-center">
                    <div class="col-12">
                        <h4 class="text-uppercase fw-bold text-decoration-underline mb-0">
                            Tax Invoice
                        </h4>
                        <div>
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Invoice</span>
                            <span t-elif="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                            <span t-elif="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                            <span t-elif="o.move_type == 'out_refund' and o.state == 'posted'">Credit Note</span>
                            <span t-elif="o.move_type == 'out_refund' and o.state == 'draft'">Draft Credit Note</span>
                            <span t-elif="o.move_type == 'out_refund' and o.state == 'cancel'">Cancelled Credit Note</span>
                            <span t-elif="o.move_type == 'in_refund'">Vendor Credit Note</span>
                            <span t-elif="o.move_type == 'in_invoice'">Vendor Bill</span>
                            <span t-if="o.name != '/'" t-field="o.name">INV/2023/0001</span>
                        </div>
                        <div>
                            <span>TRN: </span>
                            <span t-field="o.company_id.vat"></span>
                        </div>
                    </div>
                </div>
    
                <div class="row">
                        <div class="col-6">
                            <div class="mb-4">
                                <span class="fw-bold text-decoration-underline">Customer Details:</span>
                            </div>
                            <div>
                                <span class="fw-bold">Name: </span>
                                <span t-field="o.partner_id.name"></span>
                            </div>
                            <div>
                                <span class="fw-bold">Phone Number: </span>
                                <span t-field="o.partner_id.phone"></span>
                            </div>
                            <div>
                                <span class="fw-bold">Tax ID: </span>
                                <span t-field="o.partner_id.vat"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="mb-2">
                                <div class="fw-bold" style="font-size: 0.9rem">Invoice/Bill Date:</div>
                            </div>
                            <div >
                                <span t-field="o.invoice_date"/>
                            </div>
                            <div>
                                <span class="fw-bold">Address: </span>
                                <span t-field="o.partner_shipping_id.contact_address"/>
                            </div>
                            <div>
                                <span class="fw-bold">Email: </span>
                                <span t-field="o.partner_id.email"></span>
                            </div>
        
                        </div>
                </div>
            </div>


    
            <div t-attf-class="d-inline-block article o_report_layout_standard o_company_#{company.id}_layout {{  'o_report_layout_background' if company.layout_background in ['Geometric', 'Custom']  else  '' }}" t-attf-style="background-image: url({{ 'data:image/png;base64,%s' % company.layout_background_image.decode('utf-8') if company.layout_background_image and company.layout_background == 'Custom' else '/base/static/img/bg_background_template.jpg' if company.layout_background == 'Geometric' else ''}});" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                
                <t t-call="web.address_layout"/>
                <t t-out="0"/>
            </div>
    
            <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
                <div class="text-center" style="border-top: 1px solid black;">
                    <ul class="list-inline mb4">
                        <div t-field="company.report_footer"/>
                        <div class="col-12 mb4">
                            <img src="/mtm_report_customization/static/img/report_footer.jpg" style="width: 100%" alt="Logo"/>
                        </div>
                    </ul>
                    <div t-if="report_type == 'pdf'" class="text-muted">
                        <span t-out="o.name">(document name)</span>
                    </div>
                </div>
            </div>
        </template>


        <template id="custom_report_invoice_document">
            <style type="text/css">
                .table th, .table td {
                    padding: 2px;
                }
            </style>
            <t t-call="mtm_report_customization.custom_external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <t t-set="forced_vat" t-value="o.fiscal_position_id.foreign_vat"/> <!-- So that it appears in the footer of the report instead of the company VAT if it's set -->
                <div class="clearfix">
                    <div class="page">
                        <div class="oe_structure"></div>
                        <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>
                        <table class="table table-sm o_main_table table-borderless" name="invoice_line_table">
                            <thead>
                                <tr style="border-bottom: 1px solid lightgray; border-top: 1px solid lightgray">
                                    <th name="th_line_number" class="text-start"><span>Line No.</span></th>
                                    <th name="th_description" class="text-start"><span>Description</span></th>
                                    <th name="th_quantity" class="text-end"><span>Quantity</span></th>
                                    <th name="th_priceunit" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Unit Price</span></th>
                                    <th name="th_discount" t-if="display_discount" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span>Disc.%</span>
                                    </th>
                                    <th name="th_discount" t-if="display_discount" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span>Disc. value</span>
                                    </th>
                                    <th name="th_taxes" t-attf-class="text-start {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>VAT%</span></th>
                                    <th name="th_subtotal" class="text-end">
                                        <span>Amount</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="invoice_tbody">
                                <t t-set="current_subtotal" t-value="0"/>
                                <t t-set="current_total" t-value="0"/>
                                <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                                <t t-foreach="enumerate(lines, 1)" t-as="line_tuple">
                                    <t t-set="line_num" t-value="line_tuple[0]"/>
                                    <t t-set="line" t-value="line_tuple[1]"/>

                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>
                                    <t t-set="current_total" t-value="current_total + line.price_total"/>

                                    <tr style="border-bottom: 1px solid lightgray" t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="line.display_type == 'product'" name="account_invoice_line_accountable">
                                            <td name="td_line_num"><span t-if="line_num" t-out="line_num" t-options="{'widget': 'text'}" /></td>
                                            <td name="account_invoice_line_name"><span t-if="line.name" t-field="line.name" t-options="{'widget': 'text'}">Bacon Burger</span></td>
                                            <td name="td_quantity" class="text-end">
                                                <span t-field="line.quantity">3.00</span>
                                                <span t-field="line.product_uom_id"  groups="uom.group_uom">units</span>
                                            </td>
                                            <td name="td_price_unit" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span class="text-nowrap" t-field="line.price_unit">9.00</span>
                                            </td>
                                            <td name="td_discount" t-if="display_discount" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span class="text-nowrap" t-field="line.discount">0</span>
                                            </td>
                                            <td name="td_discount" t-if="display_discount" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <t t-set="flat_discount_amount" t-value="line.discount / 100 * line.price_unit"/>
                                                <span class="text-nowrap" t-out="flat_discount_amount" t-options='{"widget": "float", "precision": 1}'>0</span>
                                            </td>
                                            <t t-set="taxes" t-value="', '.join([(tax.invoice_label or tax.name) for tax in line.tax_ids])"/>
                                            <td name="td_taxes" t-attf-class="text-start {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }} {{ 'text-nowrap' if len(taxes) &lt; 10 else '' }}">
                                                <span t-out="taxes" id="line_tax_ids">Tax 10%</span>
                                            </td>
                                            <td name="td_subtotal" class="text-end o_price_total">
                                                <span class="text-nowrap" t-field="line.price_subtotal">27.00</span>
                                            </td>
                                        </t>
                                        <t t-elif="line.display_type == 'line_section'">
                                            <td colspan="99">
                                                <span t-field="line.name" t-options="{'widget': 'text'}">A section title</span>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>
                                        <t t-elif="line.display_type == 'line_note'">
                                            <td colspan="99">
                                                <span t-field="line.name" t-options="{'widget': 'text'}">A note, whose content usually applies to the section or product above.</span>
                                            </td>
                                        </t>
                                    </tr>

                                    <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                        <tr class="is-subtotal text-end">
                                            <td colspan="99">
                                                <strong class="mr16">Subtotal</strong>
                                                <span
                                                    t-out="current_subtotal"
                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                >31.05</span>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                            <div id="right-elements" t-attf-class="#{'col-5' if report_type != 'html' else 'col-12 col-md-5'} ms-5 d-inline-block float-end">
                                <div id="total" class="clearfix row">
                                    <div class="ms-auto">
                                        <table class="table table-borderless avoid-page-break-inside">

                                            <!--Tax totals-->
                                            <t t-set="tax_totals" t-value="o.tax_totals or {}"/>
                                            <t t-call="mtm_report_customization.custom_document_tax_totals"/>

                                            <!--Payments-->
                                            <t t-if="print_with_payments">
                                                <t t-if="o.payment_state != 'invoicing_legacy'">
                                                    <t t-set="payments_vals" t-value="o.sudo().invoice_payments_widget and o.sudo().invoice_payments_widget['content'] or []"/>
                                                    <t t-foreach="payments_vals" t-as="payment_vals">
                                                        <tr t-if="payment_vals['is_exchange'] == 0">
                                                            <td>
                                                                <i class="oe_form_field text-end oe_payment_label">Paid on <t t-out="payment_vals['date']" t-options='{"widget": "date"}'>2021-09-19</t></i>
                                                            </td>
                                                            <td class="text-end">
                                                                <span t-out="payment_vals['amount']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'>20.00</span>
                                                            </td>
                                                        </tr>
                                                    </t>
                                                    <t t-if="len(payments_vals) > 0">
                                                        <tr class="border-black fw-bold">
                                                            <td>Amount Due</td>
                                                            <td class="text-end">
                                                                <span t-field="o.amount_residual">11.05</span>
                                                            </td>
                                                        </tr>
                                                    </t>
                                                </t>
                                            </t>
                                        </table>
                                    </div>
                                </div>
                                <div class="mb-2">
                                    <p class="text-end lh-sm" t-if="o.company_id.display_invoice_amount_total_words">
                                        Total amount in words: <br/>
                                        <small class="text-muted lh-sm"><span t-field="o.amount_total_words">Thirty one dollar and Five cents</span></small>
                                    </p>
                                </div>
                                <t t-call="account.document_tax_totals_company_currency_template"/>
                            </div>
                        <div id="payment_term" style="width: 100%; display: inline-block">
                            <div class="justify-text">
                                <p t-if="not is_html_empty(o.fiscal_position_id.note)" name="note" class="mb-2">
                                    <span t-field="o.fiscal_position_id.note"/>
                                </p>
                            </div>
                            <t t-set="payment_term_details" t-value="o.payment_term_details"/>
                            <div class="mb-3 d-inline">
                                <t t-if="o.invoice_payment_term_id.display_on_invoice and payment_term_details">
                                    <div t-if='o.show_payment_term_details' id="total_payment_term_details_table" class="row">
                                        <div t-attf-class="#{'col-10' if report_type != 'html' else 'col-sm-10 col-md-9'}">
                                            <t t-if="o._is_eligible_for_early_payment_discount(o.currency_id,o.invoice_date)">
                                                <td>
                                                    <span t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                            t-out="o.invoice_payment_term_id._get_amount_due_after_discount(o.amount_total, o.amount_tax)">30.00</span> due if paid before
                                                    <span t-out="o.invoice_payment_term_id._get_last_discount_date_formatted(o.invoice_date)">2024-01-01</span>
                                                </td>
                                            </t>
                                            <t t-if="len(payment_term_details) > 1" t-foreach="payment_term_details" t-as="term">
                                                <div>
                                                    <span t-out="term_index + 1">1</span> - Installment of
                                                    <t t-options='{"widget": "monetary", "display_currency": o.currency_id}' t-out="term.get('amount')" class="text-end">31.05</t>
                                                    <span> due on </span>
                                                    <t t-out="term.get('date')" class="text-start">2024-01-01</t>
                                                </div>
                                            </t>
                                        </div>
                                    </div>
                                </t>
                            </div>
                            <div class="col-12" t-if="o.move_type in ('out_invoice', 'in_refund') and o.payment_reference">
                                <p name="payment_communication">
                                    <span>Please use the following communication for your payment:</span><span class="fw-bold" t-field="o.payment_reference">INV/2023/00001</span>
                                    <t t-if="o.partner_bank_id">
                                        <br/> on this account: <span t-field="o.partner_bank_id" class="fw-bold"/>
                                    </t>
                                </p>
                                <p class="text-center">
                                    Payment should be made by Cheque/Bank transfer to MTM MARINE LLC - A/C No. 1001402716, IBAN- AE52 0230
0000 0100 1402 716, Commercial Bank of Dubai , Abu Dhabi, UAE
                                </p>
                            </div>
                            <span id="payment_terms_note_id"
                            t-if="o.invoice_payment_term_id.note"
                            t-field="o.invoice_payment_term_id.note"
                            name="payment_term">Payment within 30 calendar day</span><br/>
                            <t t-set="show_qr" t-value="o.display_qr_code and o.amount_residual > 0"/>
                            <div t-if="not show_qr" name="qr_code_placeholder" class="oe_structure"></div>
                            <div id="qrcode" class="d-flex mb-3 avoid-page-break-inside" t-else="">
                                <div class="qrcode me-3" id="qrcode_image">
                                    <t t-set="qr_code_url" t-value="o._generate_qr_code(silent_errors=True)"/>
                                    <p t-if="qr_code_url" class="position-relative mb-0">
                                        <img t-att-src="qr_code_url"/>
                                        <img src="/account/static/src/img/Odoo_logo_O.svg"
                                                id="qrcode_odoo_logo"
                                                class="top-50 start-50 position-absolute bg-white border border-white border-3 rounded-circle"
                                        />
                                    </p>
                                </div>
                                <div class="d-inline text-muted lh-sm fst-italic" id="qrcode_info" t-if="qr_code_url">
                                    <p>Scan this QR Code to<br/>pay with your mobile</p>
                                </div>
                            </div>
                            <!--terms and conditions-->
                            <div class="text-muted mb-3" t-attf-style="#{'text-align:justify;text-justify:inter-word;' if o.company_id.terms_type != 'html' else ''}" t-if="not is_html_empty(o.narration)" name="comment">
                                <span t-field="o.narration"/>
                            </div>
                        </div>
                        <div id="signatures" class="row">
                            <div class="col-4" style="padding-top: 4rem">
                                <div class="col-10" style="height: 1.5rem; border-bottom: 2px solid black" t-field="user.name"></div>
                                <strong>Prepared By</strong>
                            </div>
                            <div class="col-4" style="padding-top: 4rem">
                                <div class="col-10" style="height: 1.5rem;border-bottom: 2px solid black"></div>
                                <strong>Authorized By</strong>
                            </div>
                            <div class="col-4" style="padding-top: 4rem">
                                <div class="col-10" style="height: 1.5rem;border-bottom: 2px solid black"></div>
                                <strong>Received By</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="custom_report_invoice">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.partner_id.lang"/>
                    <t t-call="mtm_report_customization.custom_report_invoice_document"
                       t-lang="lang"/>
                </t>
            </t>
        </template>
    </data>
</odoo>


